@model Mio_Coffee_WebShop.Models.RegisterViewModel
@{
    ViewBag.Title = "Register - Star-Food Ltd.";
}

<head>
    <style>
        body {
            font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
            background-color: #f5f5f5;
            color: #333;
            margin: 0;
            padding: 0;
            height: 100vh;
        }

        main {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            max-width: 500px;
            width: 100%;
        }

        h2, h4 {
            color: saddlebrown;
            text-align: center;
        }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                font-weight: bold;
            }

        .form-control {
            border-radius: 4px;
            border: 1px solid #ccc;
            padding: 10px;
            width: 100%;
            margin-left: 50px;
        }
      

        .text-danger {
            color: red;
        }

        .login-link {
            text-align: center;
            margin-top: 20px;
        }

            .login-link button {
                background-color: transparent;
                border: none;
                color: saddlebrown;
                cursor: pointer;
                text-decoration: underline;
            }

                .login-link button:hover {
                    color: #8b4513;
                }
    </style>
</head>
<body>
    <main style="margin-left: 398px" aria-labelledby="title">
        <h2 id="title">Register</h2>

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>Create a new account</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group row">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-md-2 col-md-10">
                    <button style="margin-left: 100px; color: #2e8783" class="btn kopce">Register</button>
                </div>
            </div>

            <div class="login-link">
                @{
                    var loginUrl = Url.Action("Login", "Account");
                }
                Already have an Account?
                <button onclick="event.preventDefault(); window.location.href='@loginUrl'">Log in</button>
            </div>
        }
    </main>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
