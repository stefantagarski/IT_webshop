@model Mio_Coffee_WebShop.Models.Machines

@{
    ViewBag.Title = "Details";
}

<div class="details-container">
    <h4>Details</h4>
    <hr />
    <div class="details-content">
        <div class="details-text">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Brand)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Brand)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Usage)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Usage)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Price) den
                </dd>
            </dl>
        </div>
        <div class="details-image">
            <img src="@Model.ImageURL" alt="@Model.Name" class="machine-image" />
            <p>For more information, click the <a href="https://www.nuovasimonelli.it/appialife/#brochure" class="info-link">link</a></p>
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline kopce" })
</p>

<style>
    body {
        font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
        background-color: #f4f4f9;
        color: #333;
    }

    .details-container {
        max-width: 900px;
        margin: 40px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

        .details-container h4 {
            margin-bottom: 20px;
            font-size: 2em;
            color: #444;
            text-align: center;
            text-transform: uppercase;
        }

        .details-container hr {
            border-top: 2px solid #ddd;
            width: 100%;
        }

    .details-content {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        flex-wrap: wrap;
        gap: 20px;
    }

    .details-text {
        width: 55%;
    }

    .details-image {
        width: 40%;
        text-align: center;
    }

    .dl-horizontal dt, .dl-horizontal dd {
        margin: 0;
        padding: 10px 0;
        font-size: 1.1em;
    }

    .dl-horizontal dt {
        font-weight: bold;
        color: #777;
        width: 30%;
        display: inline-block;
    }

    .dl-horizontal dd {
        color: #555;
        width: 65%;
        display: inline-block;
        margin-left: 0;
    }

    .machine-image {
        width: 100%;
        height: auto;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .info-link {
        color: #2e8783;
        text-decoration: none;
        font-weight: bold;
        transition: color 0.3s;
    }

        .info-link:hover {
            color: #1c5d59;
        }

    .btn {
        padding: 12px 25px;
        border-radius: 8px;
        display: inline-block;
        text-align: center;
        margin-top: 20px;
    }

    .btn-outline {
        background-color: transparent;
        color: #2e8783;
        border: 2px solid #2e8783;
    }

        .btn-outline:hover {
            background-color: #2e8783;
            color: #fff;
        }
</style>
