@{
    ViewBag.Title = "Contact - Star-Food Ltd.";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        main {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #333;
            font-size: 2em;
            margin-bottom: 10px;
        }

        address {
            margin-bottom: 20px;
            font-style: normal;
        }

            address h4 {
                margin: 10px 0;
                color: #666;
                font-size: 1.2em;
            }

            address strong {
                color: #333;
            }

            address a {
                color: #007BFF;
                text-decoration: none;
            }

                address a:hover {
                    text-decoration: underline;
                }

        abbr {
            text-transform: uppercase;
            font-weight: bold;
        }

        .map-container {
            margin-top: 20px;
        }

            .map-container iframe {
                width: 100%;
                height: 400px;
                border: 0;
                border-radius: 8px;
            }
    </style>
</head>
<body>
    <main aria-labelledby="title">
        <h2 id="title">Contact us!</h2>
        <address>
            Goce Delcev 113A<br />
            2400, Strumica<br />
            <abbr title="Phone">P:</abbr>
            +389 34 344 544
        </address>
        <address>
            <p>Follow us on social media</p>
            <i class="bi bi-facebook"></i><a href="https://www.facebook.com/starfood.mk"> StarFood.mk</a><br />
            <i class="bi bi-instagram"></i><a href="https://www.instagram.com/official.starfood/"> official.starfood</a><br />
            <i class="bi bi-envelope"></i> <a href="mailto:tagarskis@gmail.com"> Mail</a>
        </address>

        <img src="~/images/starfood.jpg" style=" max-width: 300px; position: relative; left: 350px; top: -276px;" />

        <div class="map-container" style="margin-top: -280px">
            <h4>Find us here</h4>
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2990.949160468969!2d22.650392575940703!3d41.44032477129322!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14a9fe6852303b79%3A0x80d1d7507f1ce093!2sBoulevard%20Goce%20Delchev%20113%2C%20Strumica%202400!5e0!3m2!1sen!2smk!4v1720381089353!5m2!1sen!2smk" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </main>
</body>
</html>
