@{
    ViewBag.Title = "Thank You";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: cursive;
            background-color: #f5f5f5;
            color: #333;
            margin: 0;
            padding: 0;
            height: 100vh;
        }

        main {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            max-width: 500px;
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        h2, h4 {
            color: saddlebrown;
            text-align: center;
        }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                font-weight: bold;
            }

        .form-control {
            border-radius: 4px;
            border: 1px solid #ccc;
            padding: 10px;
            width: 100%;
            margin-left: 50px;
        }

        .text-danger {
            color: red;
        }

        .login-link {
            text-align: center;
            margin-top: 20px;
        }

            .login-link button {
                background-color: transparent;
                border: none;
                color: saddlebrown;
                cursor: pointer;
                text-decoration: underline;
            }

                .login-link button:hover {
                    color: #8b4513;
                }

        .thank-you-container {
            background: #ffffff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
          
        }

        .thank-you-header {
            font-size: 24px;
            color: #32325d;
            margin-bottom: 20px;
        }

        .thank-you-message {
            font-size: 18px;
            color: #555555;
            margin-bottom: 30px;
        }

        .thank-you-icon {
            font-size: 48px;
            color: #4CAF50;
            margin-bottom: 20px;
        }

        .button-container {
            text-align: center;
        }

            .button-container a {
                background: #6772e5;
                color: white;
                padding: 10px 20px;
                font-size: 16px;
                border: none;
                border-radius: 4px;
                text-decoration: none;
                cursor: pointer;
            }

                .button-container a:hover {
                    background: #5469d4;
                }
    </style>
</head>
<body>
    
        <div class="thank-you-container">
            <div class="thank-you-icon">✔️</div>
            <h2 class="thank-you-header">Thank You for Your Payment!</h2>
            <p class="thank-you-message">Your transaction has been completed successfully.</p>
            <div class="button-container">
                <a href="/">Return to Home</a>
            </div>
        </div>
    
</body>
</html>
